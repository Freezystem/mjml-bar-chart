{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 20",
	"compilerOptions": {
		"types": ["node", "jest", "mjml"],
		"outDir": "build",
		"target": "ES2022",
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/index.ts"]
}
